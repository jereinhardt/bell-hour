<h1><%= @user.teacher_name %></h1>
<h4><%= link_to "Back to #{@user.department.name}", department_path(@user.department.id) %></h4>

<% if current_user == @user && current_user.department.grade %>
  <div class="classroom-dashboard">
  <button type="button" class="btn btn-primary"><%= link_to 'Take back your class', take_back_class_user_path(current_user.id), method: "patch" %></button>

  <div class="dropdown-container">
    <input type="checkbox" id="drop" />
    <label for="drop">Give class to:</label>
    <ul class="content">
      <% @teachers.each do |teacher| %>
      <li><%= link_to "#{teacher.teacher_name}", give_class_to_user_path(teacher.id), method: "patch", data: { confirm: "Are you sure you want to give your class to #{teacher.teacher_name}?" } %></li>
      <% end %>
    </ul>
  </div>

<!-- once you figure out dropdown for giving the class to a teacher, you need to update the dismissal types to do the same function in a dropdown as well -->
  <div class="dropdown-container">
    <input type="checkbox" id="drop" />
    <label for="drop">Dismiss all:</label>
    <ul class="content">
    <% current_user.department.school.dismissal_types.each do |dt| %>
      <li><%= link_to "#{dt.name}", dismiss_type_with_dismissal_type_path(dt.id), method: "patch" %></li>
    <% end %>
    </ul>
  </div>
  </div>
<% end %>

<!-- end of drop down for dismissal types -->

<% if @user.department.grade %>
  <h2>Present:</h2>
  <% @user.students.each do |student| %>
    <% if student.with_teacher_id == @user.id && student.present %>
      <h3><%= link_to "#{student.first_name} #{student.last_name}", student_path(student.id) %></h3>
    <% end %>
  <% end %>
  <h2>Absent:</h2>
  <% @user.students.each do |student| %>
    <% if student.present == false %>
      <h3><%= link_to "#{student.first_name} #{student.last_name}", student_path(student.id) %></h3>
    <% end %>
  <% end %>
<% end %>

<h2>Visiting:</h2>
<% @students.each do |student| %>
  <% if student.with_teacher_id == @user.id && student.present && student.user_id != @user.id %>
    <h3><%= link_to "#{student.first_name} #{student.last_name}", student_path(student.id) %></h3>
  <% end %>
<% end %>


