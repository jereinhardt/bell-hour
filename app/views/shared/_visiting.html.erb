<div class="white-card">
  <h2>Visiting:</h2>
  <div class="holder">
    <% @students.each do |student| %>
      <% if student.with_teacher_id == @user.id && student.present && student.teacher != @user %>
        <div class="thumbnail">
          <%= image_tag student.photo, alt: "student picture", class: "avatar-large" %>
          <p><%= link_to "#{student.first_name} #{student.last_name}", student_path(student.id) %></p>
          <% if current_user != student.with_teacher %>
          <p><%= link_to "Take #{student.first_name}", take_student_path(student.id), method: "patch" %></p>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
